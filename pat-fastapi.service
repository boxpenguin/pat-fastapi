# /etc/systemd/system/pat-fastapi.service
[Unit]
Description=My FastAPI Service
After=network.target

[Service]
User=root
WorkingDirectory=/opt/pat-fastapi/
ExecStart=/home/jordan/.local/share/virtualenvs/pat-fastapi-5QG9oBxx/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --log-config /opt/pat-fastapi/logging.conf
Restart=on-failure

[Install]
WantedBy=multi-user.target